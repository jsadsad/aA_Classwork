<% if type == :new %>
    <% action_url = cats_url %>
    <% button_text = "Create user" %>
<% elsif type == :edit %>
    <% action_url = cat_url(cat.id) %>
    <% button_text = "Update user" %>
<% end %>

<form  action="/cats" method="POST">

  <label>Name</label>
    <input type="text" name="cat[name]">

  <br>

  <label>Sex</label>
    <br>
    <input type="radio" id="male" name="cat[sex]" value="M">
    <label for="male">Male</label><br>
    <input type="radio" id="female" name="cat[sex]" value="F">
    <label for="female">Female</label><br>

  <br>

  <label for="colors">Color</label>
    <!-- <input type="text" name="cat[color]"> -->
    <select name="cat[color]" id="colors">
      <option value="select" selected>--Select a color--</option>
      <!-- Cat.color.each |color| -->
      <option value="white">White</option>
      <option value="brown">Brown</option>
      <option value="black">Black</option>
      <option value="red">Red</option>
    </select>

  <br>

  <label>Date</label>
    <input type="date" name="cat[birth_date]" value="cat[birth_date]">

  <br>
  <label>Description</label>
    <input type="textarea" name="cat[description]">

  <br>
  <input type="submit" value="Submit">
</form>

